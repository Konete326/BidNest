@model IEnumerable<BidNest.Models.User>
@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Management /</span> Users
</h4>

<div class="card">
    <h5 class="card-header">Users List</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar avatar-sm me-3">
                                    <img src="~/admin/img/avatars/1.png" alt="Avatar" class="rounded-circle">
                                </div>
                                <div>
                                    <strong>@user.FullName</strong>
                                    <div class="text-muted small">@user.Username</div>
                                </div>
                            </div>
                        </td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Role.Name == "Admin")
                            {
                                <span class="badge bg-label-primary me-1">@user.Role.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-label-secondary me-1">@user.Role.Name</span>
                            }
                        </td>
                        <td>
                            @if (user.IsBlocked)
                            {
                                <span class="badge bg-label-danger me-1">Blocked</span>
                            }
                            else
                            {
                                <span class="badge bg-label-success me-1">Active</span>
                            }
                        </td>
                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("UserDetails", new { id = user.UserId })">
                                        <i class="bx bx-show me-1"></i> View Details
                                    </a>
                                    @if (user.RoleId != 1)
                                    {
                                        <form asp-action="ToggleUserBlock" asp-route-id="@user.UserId" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            @if (user.IsBlocked)
                                            {
                                                <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to unblock this user?')">
                                                    <i class="bx bx-user-check me-1"></i> Unblock User
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to block this user?')">
                                                    <i class="bx bx-user-x me-1"></i> Block User
                                                </button>
                                            }
                                        </form>
                                        <div class="dropdown-divider"></div>
                                        <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
