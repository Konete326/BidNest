@model BidNest.ViewModels.CategoryMergeViewModel
@{
    ViewData["Title"] = "Merge Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Management / Categories /</span> Merge Categories
    </h4>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Merge Categories</h5>
                    <a href="@Url.Action("Categories")" class="btn btn-outline-secondary">
                        <i class="bx bx-arrow-back"></i> Back to Categories
                    </a>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading">
                            <i class="bx bx-warning"></i> Important Notice
                        </h6>
                        <p class="mb-0">
                            Merging categories will move all items and subcategories from the source category to the target category. 
                            This action cannot be undone. Please review your selection carefully.
                        </p>
                    </div>

                    <form asp-action="MergeCategories" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SourceCategoryId" class="form-label">Source Category (to be merged)</label>
                                <select asp-for="SourceCategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Select Source Category --</option>
                                </select>
                                <span asp-validation-for="SourceCategoryId" class="text-danger"></span>
                                <div class="form-text">This category will be merged into the target category</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TargetCategoryId" class="form-label">Target Category (merge into)</label>
                                <select asp-for="TargetCategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Select Target Category --</option>
                                </select>
                                <span asp-validation-for="TargetCategoryId" class="text-danger"></span>
                                <div class="form-text">Items and subcategories will be moved to this category</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="form-check">
                                    <input asp-for="DeleteSourceCategory" class="form-check-input" type="checkbox" checked>
                                    <label asp-for="DeleteSourceCategory" class="form-check-label">
                                        Delete source category after merge
                                    </label>
                                </div>
                                <span asp-validation-for="DeleteSourceCategory" class="text-danger"></span>
                                <div class="form-text">If unchecked, the source category will remain but will be empty</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to merge these categories? This action cannot be undone.')">
                                    <i class="bx bx-merge"></i> Merge Categories
                                </button>
                                <a href="@Url.Action("Categories")" class="btn btn-outline-secondary ms-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Merge Process</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <span class="badge bg-primary rounded-pill">1</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">Move Items</h6>
                            <p class="mb-0 text-muted">All items from source to target category</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <span class="badge bg-info rounded-pill">2</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">Move Subcategories</h6>
                            <p class="mb-0 text-muted">All subcategories to target category</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <span class="badge bg-warning rounded-pill">3</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">Delete Source</h6>
                            <p class="mb-0 text-muted">Delete source category (if selected)</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Best Practices</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bx bx-check text-success me-2"></i>
                            Backup your data before merging
                        </li>
                        <li class="mb-2">
                            <i class="bx bx-check text-success me-2"></i>
                            Review category contents first
                        </li>
                        <li class="mb-2">
                            <i class="bx bx-check text-success me-2"></i>
                            Ensure target category is appropriate
                        </li>
                        <li class="mb-0">
                            <i class="bx bx-check text-success me-2"></i>
                            Notify users of category changes
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
