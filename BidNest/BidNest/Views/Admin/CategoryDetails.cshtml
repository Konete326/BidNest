@model BidNest.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Management / Categories /</span> @Model.Name
    </h4>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Category Information</h5>
                    <div>
                        <a href="@Url.Action("EditCategory", new { id = Model.CategoryId })" class="btn btn-primary">
                            <i class="bx bx-edit-alt"></i> Edit
                        </a>
                        <a href="@Url.Action("Categories")" class="btn btn-outline-secondary">
                            <i class="bx bx-arrow-back"></i> Back
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Category Name</h6>
                        </div>
                        <div class="col-sm-9">
                            <div class="d-flex align-items-center">
                                <i class="bx bx-category me-2"></i>
                                <strong>@Model.Name</strong>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Description</h6>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Description</p>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Parent Category</h6>
                        </div>
                        <div class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.ParentName))
                            {
                                <span class="badge bg-label-info">@Model.ParentName</span>
                            }
                            else
                            {
                                <span class="text-muted">Root Category</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Status</h6>
                        </div>
                        <div class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-label-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-label-danger">Inactive</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Statistics</h6>
                        </div>
                        <div class="col-sm-9">
                            <div class="d-flex gap-3">
                                <div>
                                    <span class="badge bg-label-primary">@Model.ItemCount Items</span>
                                </div>
                                <div>
                                    <span class="badge bg-label-secondary">@Model.SubCategoryCount Sub Categories</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.SubCategories.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Sub Categories</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Items</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var subCategory in Model.SubCategories)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="bx bx-subdirectory-right me-2"></i>
                                                    @subCategory.Name
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-label-primary">@subCategory.ItemCount</span>
                                            </td>
                                            <td>
                                                @if (subCategory.IsActive)
                                                {
                                                    <span class="badge bg-label-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-label-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("CategoryDetails", new { id = subCategory.CategoryId })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bx bx-show"></i>
                                                </a>
                                                <a href="@Url.Action("EditCategory", new { id = subCategory.CategoryId })" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bx bx-edit-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("EditCategory", new { id = Model.CategoryId })" class="btn btn-primary">
                            <i class="bx bx-edit-alt"></i> Edit Category
                        </a>
                        <a href="@Url.Action("CreateCategory", new { parentId = Model.CategoryId })" class="btn btn-success">
                            <i class="bx bx-plus"></i> Add Sub Category
                        </a>
                        <form method="post" action="@Url.Action("ToggleCategoryStatus", new { id = Model.CategoryId })">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="bx @(Model.IsActive ? "bx-hide" : "bx-show")"></i> 
                                @(Model.IsActive ? "Deactivate" : "Activate")
                            </button>
                        </form>
                        <a href="@Url.Action("DeleteCategory", new { id = Model.CategoryId })" class="btn btn-danger">
                            <i class="bx bx-trash"></i> Delete Category
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Category Path</h6>
                </div>
                <div class="card-body">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            @if (!string.IsNullOrEmpty(Model.ParentName))
                            {
                                <li class="breadcrumb-item">@Model.ParentName</li>
                            }
                            <li class="breadcrumb-item active">@Model.Name</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
