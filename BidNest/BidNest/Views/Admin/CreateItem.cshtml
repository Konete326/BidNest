@model BidNest.ViewModels.ItemCreateViewModel
@{
    ViewData["Title"] = "Create Item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Management / Items /</span> Create
    </h4>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Create New Auction Item</h5>
                    <a href="@Url.Action("Items")" class="btn btn-outline-secondary">
                        <i class="bx bx-arrow-back"></i> Back to Items
                    </a>
                </div>

                <div class="card-body">
                    <form asp-action="CreateItem" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Name" class="form-label">Item Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter item name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the item in detail"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SellerId" class="form-label">Seller (Admin Only)</label>
                                <select asp-for="SellerId" class="form-select" asp-items="ViewBag.Sellers">
                                    <option value="">-- Current Admin --</option>
                                </select>
                                <span asp-validation-for="SellerId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MinimumBid" class="form-label">Minimum Bid ($)</label>
                                <input asp-for="MinimumBid" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00">
                                <span asp-validation-for="MinimumBid" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BuyNowPrice" class="form-label">Buy Now Price ($) - Optional</label>
                                <input asp-for="BuyNowPrice" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00">
                                <span asp-validation-for="BuyNowPrice" class="text-danger"></span>
                                <div class="form-text">Leave empty if no buy-now option</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AuctionDurationDays" class="form-label">Auction Duration (Days)</label>
                                <select asp-for="AuctionDurationDays" class="form-select">
                                    <option value="1">1 Day</option>
                                    <option value="3">3 Days</option>
                                    <option value="7" selected>7 Days</option>
                                    <option value="10">10 Days</option>
                                    <option value="14">14 Days</option>
                                    <option value="21">21 Days</option>
                                    <option value="30">30 Days</option>
                                </select>
                                <span asp-validation-for="AuctionDurationDays" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch mt-4">
                                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox">
                                    <label asp-for="IsFeatured" class="form-check-label">Featured Item</label>
                                </div>
                                <span asp-validation-for="IsFeatured" class="text-danger"></span>
                                <div class="form-text">Featured items appear prominently on the homepage</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Images" class="form-label">Item Images</label>
                                <input asp-for="Images" class="form-control" type="file" multiple accept="image/*">
                                <span asp-validation-for="Images" class="text-danger"></span>
                                <div class="form-text">
                                    Select multiple images (JPG, PNG, GIF, WebP). Max 5MB per image. First image will be the primary image.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bx bx-plus"></i> Create Item
                                </button>
                                <a href="@Url.Action("Items")" class="btn btn-outline-secondary ms-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Item Guidelines</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bx bx-check text-success me-2"></i>
                            Use clear, descriptive titles
                        </li>
                        <li class="mb-2">
                            <i class="bx bx-check text-success me-2"></i>
                            Provide detailed descriptions
                        </li>
                        <li class="mb-2">
                            <i class="bx bx-check text-success me-2"></i>
                            Upload high-quality images
                        </li>
                        <li class="mb-2">
                            <i class="bx bx-check text-success me-2"></i>
                            Set realistic minimum bids
                        </li>
                        <li class="mb-0">
                            <i class="bx bx-check text-success me-2"></i>
                            Choose appropriate categories
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Image Requirements</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><strong>Formats:</strong> JPG, PNG, GIF, WebP</li>
                        <li class="mb-1"><strong>Max Size:</strong> 5MB per image</li>
                        <li class="mb-1"><strong>Recommended:</strong> 800x600 pixels</li>
                        <li class="mb-0"><strong>Limit:</strong> Multiple images allowed</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
