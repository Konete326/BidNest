@model IEnumerable<BidNest.Models.Item>
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Welcome to BidNest</h1>
                <p class="lead">Your trusted online auction platform where you can bid on amazing items and sell your treasures.</p>
                <div class="mt-4">
                    <a href="@Url.Action("Auctions")" class="btn btn-light btn-lg me-3">Browse Auctions</a>
                    @if (User.Identity?.IsAuthenticated != true)
                    {
                        <a href="@Url.Action("Register", "Account")" class="btn btn-outline-light btn-lg">Join Now</a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="~/user/images/bg/home-1.jpg" alt="Auction" class="img-fluid rounded shadow" style="max-height: 400px;">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="mb-4">Featured Auctions</h2>
            <p class="text-muted">Discover amazing items up for auction right now</p>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (item.ItemImages.Any())
                        {
                            <img src="~/user/images/menu/p1.jpg" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted small">@(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted">Current Bid</small>
                                    <h6 class="text-success mb-0">$@((item.CurrentPrice ?? item.MinBid).ToString("N2"))</h6>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">Ends</small>
                                    <div class="small">@item.EndDate.ToString("MMM dd")</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="#" class="btn btn-primary btn-sm w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    <h4>No Active Auctions</h4>
                    <p>There are currently no active auctions. Check back later for new items!</p>
                </div>
            </div>
        </div>
    }

    <div class="row mt-5">
        <div class="col-12 text-center">
            <a href="@Url.Action("Auctions")" class="btn btn-outline-primary btn-lg">View All Auctions</a>
        </div>
    </div>
</div>

<div class="bg-light py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 text-center mb-4">
                <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="fas fa-gavel fa-2x"></i>
                </div>
                <h4>Easy Bidding</h4>
                <p class="text-muted">Place bids with just a few clicks and track your auction activity in real-time.</p>
            </div>
            <div class="col-lg-4 text-center mb-4">
                <div class="feature-icon bg-success text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="fas fa-shield-alt fa-2x"></i>
                </div>
                <h4>Secure Platform</h4>
                <p class="text-muted">Your transactions and personal information are protected with industry-standard security.</p>
            </div>
            <div class="col-lg-4 text-center mb-4">
                <div class="feature-icon bg-info text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="fas fa-clock fa-2x"></i>
                </div>
                <h4>24/7 Auctions</h4>
                <p class="text-muted">Bid anytime, anywhere. Our platform is available around the clock for your convenience.</p>
            </div>
        </div>
    </div>
</div>
