@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3><i class="fas fa-exclamation-triangle"></i> Access Denied</h3>
                </div>
                <div class="card-body text-center">
                    <h4 class="text-danger">You don't have permission to access this resource</h4>
                    <p class="text-muted">
                        The page you're trying to access requires special permissions that your account doesn't have.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-home"></i> Go Home
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt"></i> Login with Different Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
